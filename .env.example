# SnippetVault Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Future Feature)
# =============================================================================
# When backend storage is implemented, configure your database connection here
# DATABASE_URL=postgresql://user:password@localhost:5432/snippetvault
# DATABASE_POOL_SIZE=10

# =============================================================================
# AUTHENTICATION (Future Feature)
# =============================================================================
# NextAuth.js configuration for user authentication
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-super-secret-key-here-min-32-chars

# OAuth Providers (optional)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# =============================================================================
# STORAGE (Future Feature)
# =============================================================================
# Cloud storage for snippet attachments (images, files)
# S3_BUCKET=snippetvault-files
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Toggle features on/off
NEXT_PUBLIC_ENABLE_PUBLIC_SNIPPETS=true
NEXT_PUBLIC_MAX_SNIPPETS_FREE=50
NEXT_PUBLIC_MAX_SNIPPETS_PRO=unlimited

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=snippetvault.com

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Enable debug mode (shows detailed errors)
# DEBUG=true

# =============================================================================
# PRODUCTION
# =============================================================================
# Your production domain
# NEXT_PUBLIC_APP_URL=https://snippetvault.com

# Email service (for notifications, password reset)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM=noreply@snippetvault.com

# =============================================================================
# RATE LIMITING (Future Feature)
# =============================================================================
# Prevent abuse
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
# RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# NOTES
# =============================================================================
# Currently, SnippetVault uses localStorage (no backend required).
# These environment variables are placeholders for future features.
#
# Required variables: NONE (for now)
# Optional variables: Feature flags (NEXT_PUBLIC_*)
#
# For local development, you can run the app without any .env file.
